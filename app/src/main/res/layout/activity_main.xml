<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 修复：将MaterialButton替换为原生Button（避免依赖缺失问题），保留功能 -->
    <Button
        android:id="@+id/tun_switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动拦截"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/> <!-- 修复：将app:layout_constraintMarginTop改为android:layout_marginTop（原生属性） -->

    <!-- IP拦截列表标题 -->
    <TextView
        android:id="@+id/ip_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拦截IP列表："
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tun_switch_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp" <!-- 修复：统一使用android:前缀的margin属性 -->
        android:layout_marginTop="20dp"/>

    <!-- IP输入框 -->
    <EditText
        android:id="@+id/ip_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入IP地址（如：192.168.1.1）"
        android:inputType="textUri"
        android:maxLines="1"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintTop_toBottomOf="@id/ip_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"/>

    <!-- IP列表展示 -->
    <ListView
        android:id="@+id/ip_list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:drawable/list_selector_background"
        app:layout_constraintTop_toBottomOf="@id/ip_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <!-- 修复：保存按钮同样使用原生Button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存拦截列表"
        app:layout_constraintTop_toBottomOf="@id/ip_list_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
